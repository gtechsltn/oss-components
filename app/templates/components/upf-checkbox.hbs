{{input type='checkbox' class='upf-checkbox__input'
        id=(concat 'unchecked-checkbox-' elementId)
        checked=value action='selectItem'}}

<label for={{concat 'unchecked-checkbox-' elementId}}
       class='upf-checkbox__fake-checkbox'>
</label>

{{#if hasLabel}}
  <span class='upf-checkbox__label'>{{yield}}</span>
{{/if}}
