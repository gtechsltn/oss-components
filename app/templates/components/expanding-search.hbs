<button {{action 'expandOrErase' preventDefault=true}} class='upf-btn upf-btn--default expanding-search__submit'>
  {{#if expandedSearch}}
    {{fa-icon 'close'}}
  {{else}}
    {{fa-icon 'search'}}
  {{/if}}
</button>
{{input type="text" class=(concat "form-control upf-input expanding-search__input" (if small ' upf-input--small'))
        placeholder=placeholder value=searchQuery}}
