<thead>
  <tr>
    {{#if hasSelection}}
      <th width="70" class="unsortable visible_on_hover">Select all</th>
    {{/if}}

    {{#each columns as |column|}}
      <th>{{column.title}}</th>
    {{/each}}
  </tr>
</thead>

<tbody>
  {{#each collection as |item index|}}
    {{#upf-table/row ref=item}}
      {{#if hasSelection}}
        <td>{{upf-checkbox value=item.selected}}</td>
      {{/if}}

      {{#each columns as |column|}}
        <td>{{get item column.property}}</td>
      {{/each}}
    {{/upf-table/row}}
  {{/each}}
</tbody>
