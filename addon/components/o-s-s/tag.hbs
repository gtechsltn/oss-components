<div class={{this.computedClass}}>
    {{#if @icon}} 
        <i class={{@icon}}></i>
    {{/if}}

    {{#if @label}}
    <div class="text-style-semibold">
        {{#if @hasEllipsis}}
            <span>{{@label}}</span>
        {{else}}
            {{@label}}
        {{/if}}
    </div>
    {{/if}}
</div>
