<OSS::InputContainer @errorMessage={{this.errorMessage}} ...attributes>
  <:input>
    <Input @value={{@value}} @placeholder={{@placeholder}} type={{this.visibility}} {{on "keyup" this.validateInput}} />
  </:input>
  <:suffix>
    <i role="button" class="text-color-default-light fas {{this.visibilityIcon}}" {{on "click" this.toggleVisibility}}></i>
  </:suffix>
</OSS::InputContainer>
