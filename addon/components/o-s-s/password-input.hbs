<OSS::InputContainer @errorMessage={{this.errorMessage}} ...attributes>
  <:input>
    <Input class="upf-input"
           @value={{@value}}
           @type={{this.visibility}}
           disabled={{@disabled}}
           placeholder={{this.placeholder}}
           autocomplete="current-password"
           {{on "keyup" this.validateInput}} />
  </:input>
  <:suffix>
    {{#if @disabled}}
      <i class="font-color-gray-500 far {{this.visibilityIcon}}"></i>
    {{else}}
      <OSS::Button @icon={{this.visibilityIcon}} @square={{true}} {{on "click" this.toggleVisibility}} />
    {{/if}}
  </:suffix>
</OSS::InputContainer>
