<div class="upf-infinte-select upf-floating-menu">
  {{#if this.searchEnabled}}
    {{#input-wrapper}}
      <Input
        value={{this._searchKeyword}} {{on "keyup" this.updateSearchKeyword}} type="text"
        class="form-control upf-input" placeholder="Search..." />
    {{/input-wrapper}}
  {{/if}}

  <ul class="upf-infinite-select__items-container margin-top-xx-sm" {{on "scroll" this.scrollListener}}>
    {{#each this.items as |item|}}
      <li class="upf-infinite-select__item" {{on "click" (fn this.didSelectItem item)}}>
        {{#if (has-block "option")}}
          {{yield item to="option"}}
        {{else}}
          {{get item this.itemLabel}}
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>
