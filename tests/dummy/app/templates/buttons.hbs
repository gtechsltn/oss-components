<section class='col-xs-11 center-block buttons'>
    <h2 class='col-xs-12'>Buttons <span>(<code>.upf-btn</code>)</span></h2>
    <div class='col-xs-12'>
      <div class='row'>
        <div class='col-xs-12'>
          <h3>Standard Buttons</h3>
          <ul class='nav nav-tabs' role='tablist'>
            <li role='presentation' class='active'>
              <a href='#component-standard' aria-controls='component' role='tab'
                 data-toggle='tab'>
                Component
              </a>
            </li>

            <li role='presentation'>
              <a href='#html-standard' aria-controls='html' role='tab'
                 data-toggle='tab'>
                HMTL
              </a>
            </li>
          </ul>

          <div class='tab-content'>
            <div role='tabpanel' class='tab-pane active' id='component-standard'>
              {{partial 'partials/buttons/standard'}}
            </div>

            <div role='tabpanel' class='tab-pane' id='html-standard'>
              {{code-snippet name='standard-buttons.hbs'}}
            </div>
          </div>
        </div>

        <div class='col-xs-12 margin-top-lg'>
          <h3>Alternative Button Sizes</h3>
          <ul class='nav nav-tabs' role='tablist'>
            <li role='presentation' class='active'>
              <a href='#component-alternative-sizes' aria-controls='component'
                 role='tab'
                 data-toggle='tab'>
                Component
              </a>
            </li>

            <li role='presentation'>
              <a href='#html-alternative-sizes' aria-controls='html' role='tab'
                 data-toggle='tab'>
                HMTL
              </a>
            </li>
          </ul>

          <div class='tab-content'>
            <div role='tabpanel' class='tab-pane active'
                 id='component-alternative-sizes'>
              {{partial 'partials/buttons/alternative-sizes'}}
            </div>

            <div role='tabpanel' class='tab-pane' id='html-alternative-sizes'>
              {{code-snippet name='standard-buttons.hbs'}}
            </div>
          </div>
        </div>
      </div>

      <div class='col-xs-12 margin-bottom-lg'>
        {{partial 'partials/buttons/controls'}}
      </div>

      <div class='col-xs-12 margin-bottom-lg'>
        {{partial 'partials/buttons/stateful'}}
      </div>
    </div>
</section>
